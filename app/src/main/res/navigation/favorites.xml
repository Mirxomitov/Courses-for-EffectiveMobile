<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorites"
    app:startDestination="@+id/favoritesFragment">

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.courses.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/action_favoritesFragment_to_courseDetailsFragment"
            app:destination="@id/courseDetailsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/courseDetailsFragment"
        android:name="com.example.courses.ui.course_details.CourseDetailsFragment"
        android:label="@string/title_course_details"
        tools:layout="@layout/fragment_course_details"/>
</navigation>